<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}

		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav>
			<ul>
				{% if is_granted("ROLE_USER") or is_granted("ROLE_ADMIN") %}
					<li>Bonjour
						{{ app.user.firstname}}</li>
					<li>
						<a class="btn" href={{ path('purchase_order') }}>Mes Commandes</a>
					</li>
					{% if is_granted("ROLE_ADMIN") %}
						<li>
							<a class="btn" href="/admin/restaurant">Mes Restaurants</a>
						</li>
					{% endif %}
					<li>
						<a class="btn" href="/logout">Se Deconnecter</a>
					</li>
					<li>
						<a class="btn" href="/">
							Accueil
						</a>
					</li>
				{% else %}
					<li>
						<a class="btn" href="/">
							Accueil
						</a>
					</li>
					<li>
						<a class="btn" href="/login">Connectez-vous</a>
					</li>
				{% endif %}
			</ul>
		</nav>
		{% block body %}{% endblock %}
	</body>
</html></body></html>
